<div class="d-flex">

    <div class="col-md-6 text-center right-border" id="email-list">
    <%= link_to "Create Email", emails_path, :method => :post , class:"btn btn-primary" , remote: true %>
        <h1 class="mt-3" >Voici la liste des mails</h1>
        <%@emails.each do |email|%>
            <%= render "email", email: email %>
        <%end%>
        
    </div>

    <div class="col-md-6 text-center" id="email-show">
        <h1 class="mt-3">Voici le contenu de l'email</h1>
    </div>

</div>